# Graph RAG Environment Configuration - Template

# Application Settings
APP_NAME=Graph RAG Platform
APP_VERSION=1.0.0
DEBUG=false

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Graph Database Configuration
GRAPH_DB_TYPE=neo4j

# Neo4j Aura Configuration
NEO4J_URI=neo4j+s://your-aura-instance.databases.neo4j.io
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-neo4j-password

# LLM Provider Configuration - Use Groq for cloud
LLM_PROVIDER=groq

# Groq API Configuration (Get from https://console.groq.com)
GROQ_API_KEY=your-groq-api-key
GROQ_MODEL=mixtral-8x7b-32768

# Embedding Configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# Document Processing Configuration
CHUNK_SIZE=500
CHUNK_OVERLAP=50
MAX_CHUNKS_PER_DOC=1000

# Entity Resolution Configuration
ENTITY_SIMILARITY_THRESHOLD=0.85

# Retrieval Configuration
MAX_VECTOR_RESULTS=10
GRAPH_TRAVERSAL_DEPTH=2
RETRIEVAL_TIMEOUT_SECONDS=30

# Storage Configuration
UPLOAD_DIR=./uploads
VECTOR_STORE_PATH=./vector_store

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/graphrag.log
