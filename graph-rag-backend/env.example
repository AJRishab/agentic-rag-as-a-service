# Graph RAG Environment Configuration

# Application Settings
APP_NAME=Graph RAG Platform
APP_VERSION=1.0.0
DEBUG=true

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Graph Database Configuration
# Options: neo4j, neptune, memory
GRAPH_DB_TYPE=memory

# Neo4j Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# AWS Neptune Configuration (Optional)
NEPTUNE_ENDPOINT=your-neptune-endpoint.amazonaws.com
NEPTUNE_PORT=8182

# LLM Provider Configuration
# Options: ollama, openai, huggingface
LLM_PROVIDER=ollama

# Ollama Configuration (Free Local LLM)
OLLAMA_ENDPOINT=http://localhost:11434/api/generate
OLLAMA_MODEL=llama2

# OpenAI Configuration (Optional)
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-3.5-turbo

# HuggingFace Configuration (Optional)
HUGGINGFACE_API_KEY=your-hf-token
HUGGINGFACE_MODEL=mistralai/Mistral-7B-Instruct-v0.2

# Embedding Configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# Document Processing Configuration
CHUNK_SIZE=500
CHUNK_OVERLAP=50
MAX_CHUNKS_PER_DOC=1000

# Entity Resolution Configuration
ENTITY_SIMILARITY_THRESHOLD=0.85

# Retrieval Configuration
MAX_VECTOR_RESULTS=10
GRAPH_TRAVERSAL_DEPTH=2
RETRIEVAL_TIMEOUT_SECONDS=30

# Storage Configuration
UPLOAD_DIR=./uploads
VECTOR_STORE_PATH=./vector_store

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/graphrag.log